generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model accounts {
  id                  String  @id
  userId              String
  type                String
  provider            String
  provider_account_id String
  refresh_token       String?
  access_token        String?
  expires_at          Int?
  token_type          String?
  scope               String?
  id_token            String?
  session_state       String?
  users               users   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, provider_account_id])
}

model service_types {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  services    services[]
}

model services {
  id            String        @id
  title         String
  description   String
  value         Int
  service_class String
  valid_to_     DateTime      @map("valid_to ")
  valid_from    DateTime
  created_at    DateTime      @default(now())
  updated_at    DateTime
  providerId    String
  serviceTypeId Int
  users         users         @relation(fields: [providerId], references: [id])
  service_types service_types @relation(fields: [serviceTypeId], references: [id])
}

model sessions {
  id            String   @id
  session_token String   @unique
  userId        String
  expires       DateTime
  users         users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model users {
  id             String     @id
  name           String?
  email          String?    @unique
  phone          String?    @unique
  user_type      String     @default("user")
  created_at     DateTime   @default(now())
  updated_at     DateTime
  password       String?    @default("123456")
  emailConfirmed Boolean    @default(false)
  phoneConfirmed Boolean    @default(false)
  emailVerified  DateTime?
  image          String?
  accounts       accounts[]
  services       services[]
  sessions       sessions[]
}

model verification_tokens {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
